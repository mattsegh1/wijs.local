{% extends "::base.html.twig" %}

{% block title %}Search offices{% endblock %}

{% block body %}
    <style>
        /* Always set the map height explicitly to define the size of the div
         * element that contains the map. */
        #map {
            height: 50%;
        }

        /* Optional: Makes the sample page fill the window. */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>

    <div class="container">
        <div class="row">
            <form class="col s12 card">
                <div class="card-content">
                    <span class="card-title">Search offices in the neigborhood.</span>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="location" type="text" class="validate" required minlength="2">
                            <label for="location">Location</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <p>Distance: <span id="range-value">15</span> km</p>
                            <p class="range-field">
                                <input type="range" id="range" min="1" max="150" step="1" value="15"/>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6">
                            <input type="checkbox" class="filled-in" id="weekend"/>
                            <label for="weekend">Open in weekends</label>
                        </div>
                        <div class="col s6">
                            <input type="checkbox" class="filled-in" id="support"/>
                            <label for="support">With support desk</label>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <button class="btn waves-effect waves-light" type="submit" name="submit">
                        Search <i class="material-icons right">search</i>
                    </button>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col s12">

            </div>
        </div>
        <div class="row">
            <div class="col s12 result">
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="js/script.js">
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB9n3VRQ1C9GdsiLOHV8svhf9lnvvMAiEQ"
            async defer></script>
{% endblock %}
